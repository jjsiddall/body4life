<%- model_class = Workout -%>
<div class="page-header">
  <h1><%=t '.title', :default => @workout.title.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cardio) %>:</strong></dt>
  <dd><%= @workout.cardio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @workout.title %></dd>
</dl>
<div class="row">
  <div class="col-md-3">
    <input type="text" name="timer" class="form-control timer" placeholder="0 sec">
  </div>
  <div class="col-md-9">
    <button class="btn btn-success start-timer-btn">Start</button>
    <button class="btn btn-success resume-timer-btn hidden">Resume</button>
    <button class="btn pause-timer-btn hidden">Pause</button>
    <button class="btn btn-danger remove-timer-btn hidden">Remove Timer</button>
  </div>
</div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              workouts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_workout_path(@workout), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workout_path(@workout),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
